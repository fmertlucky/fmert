<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="民宿预订"
        android:textColor="#9C27B0"
        android:textSize="44sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/imageBooking"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageBooking"
        app:layout_constraintTop_toTopOf="@+id/imageBooking"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:id="@+id/imageBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:src="@drawable/is_booking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openQueryActivity"
        android:text="查询民宿" />
    <Button
        android:id="@+id/buttonHouses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openHousesActivity"
        android:text="民宿信息" />

    <Button
        android:id="@+id/buttonOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的订单"
        android:onClick="openOrdersActivity" />

    <Button
        android:id="@+id/buttonReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评价"
        android:onClick="openReviewsActivity" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人中心"
        android:onClick="openProfileActivity" />

    <Button
        android:id="@+id/buttoninform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通知"
        android:onClick="openInformActivity" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="44sp"
        android:text="欢迎" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textSize="44sp" />


</LinearLayout>
