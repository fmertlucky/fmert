<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QueryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入民宿名称"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editSearch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入民宿名称" />

        <Button
            android:id="@+id/btnSearch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openHouseActivity2"
            android:text="搜索" />


        <Space
            android:layout_width="1dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入民宿位置，例如四川省成都市"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editSearch2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入民宿位置" />

        <Button
            android:id="@+id/btnSearch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openHouseActivity3"
            android:text="搜索" />

        <!-- 继续添加两个 EditText 和 Button 组件 -->

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
